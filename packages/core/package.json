{
  "name": "@dragula2/core",
  "version": "0.0.0",
  "author": "Prou Yann <toofff.development@gmail.com>",
  "description": "Drag and drop so simple it hurts - Second edition",
  "homepage": "https://toofff.github.io/dragula2",
  "bugs": {
    "url": "https://github.com/toofff/dragula2/issues"
  },
  "license": "MIT",
  "type": "module",
  "main": "./dist/cjs/index.min.js",
  "module": "./dist/legacy-esm/index.min.js",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/esm/index.min.mjs",
      "require": "./dist/cjs/index.min.js",
      "style": "./dist/index.min.css"
    },
    "./package.json": "./package.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/toofff/dragula2.git",
    "directory": "packages/core"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "start": "pnpm run build --watch",
    "build": "rollup --config --bundleConfigAsCjs",
    "build:production": "pnpm run build --perf --environment BUILD:production",
    "start:old": "process-builder --watch",
    "build:old": "process-builder",
    "lint": "pnpm run lint:tool:analyzer; pnpm run lint:tool:formatter",
    "lint:fix": "pnpm run lint:tool:analyzer --fix; pnpm run lint:tool:formatter --fix",
    "lint:tool:analyzer": "lint-analyzer \"./{__tests__,src}/**/*.js\"",
    "lint:tool:formatter": "lint-formatter \"**/*.{css,json,md}\"",
    "test": "jest --maxWorkers=50%",
    "test:ci": "jest --silent --maxWorkers=50%",
    "test:watch": "jest --watchAll",
    "test:old": "pnpm exec browserify --debug test/*.js | tape-run",
    "test:old:watch": "pnpm exec hihat test/*.js -p tap-dev-tool"
  },
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@babel/preset-modules": "0.1.5",
    "@rollup/plugin-babel": "6.0.3",
    "@rollup/plugin-commonjs": "24.1.0",
    "@rollup/plugin-terser": "0.4.1",
    "@testing-library/dom": "8.19.1",
    "@testing-library/jest-dom": "5.16.5",
    "@tools/lint": "workspace:*",
    "babel-jest": "^29.5.0",
    "browserify": "17.0.0",
    "hihat": "2.6.4",
    "jest": "29.3.1",
    "jest-environment-jsdom": "29.3.1",
    "rollup": "3.20.2",
    "rollup-plugin-generate-package-json": "3.2.0",
    "tap-dev-tool": "1.3.0",
    "tape": "5.0.1",
    "tape-run": "8.0.0"
  },
  "sideEffects": false
}
