{
  "name": "@tools/lint",
  "version": "0.0.0",
  "private": true,
  "author": "Prou Yann <toofff.development@gmail.com>",
  "description": "Centralization of tools and configurations related to the static quality and the lint of the Dragula2 project.",
  "homepage": "https://toofff.github.io/dragula2",
  "license": "MIT",
  "type": "module",
  "bin": {
    "lint-analyzer": "./bin/analyzer.js",
    "lint-formatter": "./bin/formatter.js"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "lint": "pnpm run lint:tool:analyzer; pnpm run lint:tool:formatter",
    "lint:fix": "pnpm run lint:tool:analyzer --fix; pnpm run lint:tool:formatter --fix",
    "lint:tool:analyzer": "./bin/analyzer.js \"**/*.js\" --internal",
    "lint:tool:formatter": "./bin/formatter.js \"**/*.{json,md}\" --internal"
  },
  "dependencies": {
    "consola": "3.0.2",
    "eslint": "8.32.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jest": "27.2.1",
    "eslint-plugin-jest-dom": "4.0.3",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-testing-library": "5.9.1",
    "prettier": "2.8.1"
  }
}
